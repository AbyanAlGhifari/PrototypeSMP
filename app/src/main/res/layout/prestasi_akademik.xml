<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="200dp"
            android:background="@drawable/bgprestasi2"
            android:gravity="center">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Akademik"
                android:fontFamily="sans-serif-medium"
                android:textSize="50sp"
                android:textColor="@color/white"/>
        </LinearLayout>
        <HorizontalScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:orientation="horizontal"
                android:background="@drawable/bgprestasi"
                android:gravity="center">
                <ImageView
                    android:layout_width="250dp"
                    android:layout_height="300dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres1"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres2"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres3"/>
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres4"/>
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres5"/>
                <ImageView
                    android:layout_width="240dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres6"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres7"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres8"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/pres9"/>
                <ImageView
                    android:layout_width="400dp"
                    android:layout_height="350dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="25dp"
                    android:src="@drawable/pres10"/>
            </LinearLayout>
        </HorizontalScrollView>
    </LinearLayout>
</ScrollView>